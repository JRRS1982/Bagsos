<DOCTYPE html>
<html>
<head>
<div class="page-header">
    <div class="header-container">
      <h1>Helping Hands</h1>
      <h3>Helping people help people</h3>
    </div>
    <div class=header-new-task><%= link_to 'New Task', new_task_path %></div> 
    <div class=header-logout><%= link_to('Logout', destroy_user_session_path, method: :delete) %></div> 
    </div>
</head>
<body>
  <div id="single-form">
    <h2>List a task</h2>

    <%= form_for @task do |form| %>
      <%= form.label :title %>
      <%= form.text_field :title %>
      <%= form.label :description %>
      <%= form.text_area :description %>
      <%= form.label :address %>
      <%= form.text_area :address %>
      <%= form.submit "List Task" %>
    <% end %>
  </div>
</body>