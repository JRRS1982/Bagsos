<DOCTYPE html>
<html>
<body>
  <div id="single-form">
    <h2>List a task</h2>

    <%= form_for @task do |form| %>
      <%= form.label :title %>
      <%= form.text_field :title %>
      <%= form.label :description %>
      <%= form.text_area :description %>
      <%= form.submit "List Task" %>
    <% end %>
  </div>
</body>