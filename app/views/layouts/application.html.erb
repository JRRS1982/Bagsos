<!DOCTYPE html>
<html>
  <head>
    <title>Helping Hands</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="page-header">
      <div class="header-container">
        <h1>Helping Hands</h1>
        <h3>Helping people help people</h3>
      </div>
      <div class=new-task><%= link_to 'New Task', new_task_path %></div> 
      <div class=new-task><%= link_to('Logout', destroy_user_session_path, method: :delete) %></div> 
    </div>
    <div id="content">
      <div id="flash-messages" class="flash-message container">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>"><%= value.html_safe %></div>
        <% end %>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
